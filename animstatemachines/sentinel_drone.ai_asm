                },
                "intro": {
                    "animation_selector": "intro@default"
                }
            }
        },
        "movement": {
            "substates": {
                "locomotion": {
                    "animation_selector": "locomotion@movement",
                    "loopsync": true,
                    "parametric2d": true,
                    "speedblend": true
                }
            }
        }
